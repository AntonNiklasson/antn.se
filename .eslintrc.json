{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "globals": {
    "graphql": true
  },
  "settings": {
    "react": {
      "version": "16.8"
    }
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "prettier"],
  "plugins": ["react-hooks"],
  "rules": {
    "no-console": 2,
    "react/prop-types": [2, { "skipUndeclared": true }],
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react-hooks/rules-of-hooks": 2,
    "react-hooks/exhaustive-deps": 1
  }
}
