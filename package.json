		"bracketSameLine": true,
		"plugins": [
			"prettier-plugin-astro",
			"prettier-plugin-tailwindcss"
		],
		"overrides": [
			{
				"files": [
					"*.md",
					"*.mdx"
				],
				"options": {
					"printWidth": 80,
					"proseWrap": "always"
				}
			}
		]
	},
	"devDependencies": {
		"@tailwindcss/vite": "^4.1.13",
		"prettier-plugin-tailwindcss": "^0.6.14"
