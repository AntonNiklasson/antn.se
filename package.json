{
	"private": true,
	"name": "antn.se",
	"scripts": {
		"dev": "astro dev",
		"start": "astro dev",
		"build": "astro build",
		"preview": "astro preview",
		"astro": "astro",
		"check": "prettier --check ./src",
		"format": "prettier --write ./src",
		"test": "vitest",
		"make:post": "bun run scripts/new-post/index.ts"
	},
	"packageManager": "pnpm@9.11.0",
	"engines": {
		"node": "20.x"
	},
	"dependencies": {
		"@astrojs/mdx": "^2.3.1",
		"@astrojs/partytown": "^2.1.4",
		"@astrojs/rss": "^4.0.12",
		"@astrojs/sitemap": "^3.4.1",
		"@astrojs/tailwind": "^5.1.5",
		"@astrojs/vercel": "^8.2.1",
		"@resvg/resvg-js": "^2.6.2",
		"@tailwindcss/typography": "^0.5.16",
		"astro": "^4.16.18",
		"gray-matter": "^4.0.3",
		"prettier": "^3.6.2",
		"prettier-plugin-astro": "^0.14.1",
		"resend": "^4.6.0",
		"satori": "^0.15.2",
		"sharp": "^0.34.2",
		"tailwindcss": "^3.4.17",
		"vitest": "^3.2.4"
	},
	"prettier": {
		"printWidth": 100,
		"tabWidth": 4,
		"useTabs": true,
		"bracketSameLine": true,
		"plugins": [
			"prettier-plugin-astro"
		],
		"overrides": [
			{
				"files": [
					"*.md",
					"*.mdx"
				],
				"options": {
					"printWidth": 80,
					"proseWrap": "always"
				}
			}
		]
	}
}
