	"packageManager": "pnpm@9.11.0",
	"engines": {
		"node": "20.x"
	},
	"dependencies": {
		"@astrojs/check": "^0.9.4",
		"@astrojs/mdx": "^4.3.4",
		"@astrojs/partytown": "^2.1.4",
		"@astrojs/react": "^4.3.0",
		"@astrojs/rss": "^4.0.12",
		"@astrojs/sitemap": "^3.5.1",
		"@astrojs/vercel": "^8.2.7",
		"@resvg/resvg-js": "^2.6.2",
		"@tailwindcss/typography": "^0.5.16",
		"@types/react": "^19.1.12",
		"@types/react-dom": "^19.1.9",
		"astro": "^5.13.5",
		"gray-matter": "^4.0.3",
		"jotai": "^2.13.1",
		"motion": "^12.23.12",
		"prettier": "^3.6.2",
		"prettier-plugin-astro": "^0.14.1",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"react-markdown": "^10.1.0",
