---
interface Props {
	date: Date;
	showYear?: boolean;
}

const { date, showYear = false } = Astro.props;
const d = new Date(date);

const month = d.toLocaleDateString("en-US", { month: "long" });
const day = d.getDate();
const year = d.getFullYear();

const formatted = showYear ? `${month} ${day}, ${year}` : `${month} ${day}`;
---

<time class="semibold text-sm text-gray-500" datetime={d.toISOString()}>
	{formatted}
</time>
