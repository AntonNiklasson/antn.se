---
interface Props {
	date: Date;
}

const { date } = Astro.props;
const d = new Date(date);
---

<time datetime={d.toISOString()}>
	{
		d.toLocaleDateString("sv-SE", {
			year: "numeric",
			month: "numeric",
			day: "numeric",
		})
	}
</time>

<style>
	time {
		color: var(--text-muted);
		font-size: 0.875rem;
		font-weight: 400;
	}
</style>
