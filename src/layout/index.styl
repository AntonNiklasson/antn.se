* {
  margin: 0;
  padding: 0;
	box-sizing: border-box;
	transition-duration: 250ms;
}

html,
body {
  height: 100%;
}

body {
  font: 16px / 1.4 'Helvetica Neue', Helvetica, sans-serif;
}

h1,
h2,
h3,
h4,
h5,
h6 {
  color: inherit;
	line-height: 1.4;
	font-weight: 500;
	font-family: 'VT323', monospace;
}

img {
	max-width: 100%;
}

a {
	color: inherit;
	text-decoration: none;
}

p {
	margin: 1em 0;
}

ul, ol {
	margin: 1em;
	padding: 0;
}
