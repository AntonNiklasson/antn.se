---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import { ViewTransitions } from "astro:transitions";
import HeaderLink from "../components/HeaderLink.astro";

type Props = {
  title?: string;
  summary?: string;
};

const { title, summary } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={`${title ?? "anton niklasson"} | antn.se`}
      description={summary}
    />
  </head>

  <body>
    <header>
      <h2><a href="/">anton niklass<span class="cursor">o</span>n</a></h2>

      <nav>
        <a href="https://cv.antn.se" target="_blank">resume</a>
        <a href="https://x.com/antonniklasson" target="_blank">twitter</a>
        <a href="https://github.com/antonniklasson" target="_blank">github</a>
        <a href="https://www.linkedin.com/in/antonniklasson" target="_blank"
          >linkedin</a
        >
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <Footer />

    <style>
      header,
      main {
        max-width: 40rem;
        width: 100%;
        padding: 2rem;
        margin: 0 auto;
      }

      header {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
      }

      h2 a {
        color: inherit;
        text-decoration: none;
        font-size: 1.8rem;
      }
      h2 .cursor {
        background: var(--text);
        color: var(--surface);

        animation: fade 700ms alternate infinite;
      }

      @keyframes fade {
        from {
          filter: none;
        }
        to {
          filter: invert();
        }
      }

      header nav {
        display: flex;
        align-items: center;

        a {
          display: inline-block;
          padding: 0.5em;
          text-decoration: none;
          transition: all 120ms;

          font-weight: bold;
          color: var(--text-muted);

          &:hover {
            text-fill-color: transparent;
            animation: gradient-flow 2.6s infinite linear;
            background-image: linear-gradient(45deg, red, orange, purple, red);
            background-size: 200%;
            background-clip: text;
            -webkit-background-clip: text;
            -moz-background-clip: text;
            -webkit-text-fill-color: transparent;
            -moz-text-fill-color: transparent;
          }
        }
      }

      @keyframes gradient-flow {
        from {
          background-position: 0%;
        }
        to {
          background-position: 200%;
        }
      }
    </style>
  </body>
</html>
