---
import { getCollection } from "astro:content";
import FormattedDate from "../components/Date.astro";
import PageLayout from "../layouts/PageLayout.astro";

const raw = await getCollection("blog");
const posts = raw
	.sort((a, b) => {
		const x = new Date(a.data.date);
		const y = new Date(b.data.date);
		return y.valueOf() - x.valueOf();
	})
	.slice(0, 6);
---

<PageLayout>
	<section>
		<p>hi there,</p>
		<p>
			I'm currently working at <a href="https://sanalabs.com">Sana</a> as
			a frontend engineer. I enjoy developer tooling, polished interfaces,
			testing strategies and minimalism.
		</p>
	</section>
	<section>
		<h2>notes</h2>

		<div class="post-grid">
			{
				posts.map((post) => (
					<div class="post">
						<h3>
							<a href={`/${post.slug}`}>{post.data.title}</a>
						</h3>
						<FormattedDate date={post.data.date} />
					</div>
				))
			}
		</div>

		<a href="/notes">all notes â†’</a>
	</section>
</PageLayout>

<style>
	section {
		display: flex;
		flex-flow: column;
		gap: 16px;
		margin-block: 64px;

		hgroup {
			p {
				color: var(--text-muted);
			}
		}
	}

	.post-grid {
		display: flex;
		flex-flow: column nowrap;
		gap: 32px;
	}

	.post {
		display: flex;
		flex-direction: column;
		align-items: flex-start;
		gap: 4px;
		transition: all 200ms;
		cursor: pointer;
		border: 1px solid transparent;

		a {
			text-decoration: none;
		}
	}
</style>
